<h5 class="center teal-text text-lighten-3">Select Invitee</h5>
 <div class="row">
      <div class="col s12 m5">
        <div class="card-panel grey lighten-2">
<div class="possible-invitees center">
  <%= form_for @attendee, url: user_playdate_attendees_path, method: :post do |f| %>
    <% @user.friends.each do |friend| %>
       <input id="<%= friend.id %>" type="checkbox" name="attending[guest_id]" value="<%= friend.id %>">
       <label class="black-text" for="<%= friend.id %>"><%= friend.first_name %></label><br />
    <% end %><br />
  <%= f.submit 'Invite!', class: "waves-effect waves-light black-text btn white" %>
  <% end %>
  </form>
</div>
</div>
      </div>
    </div>
