<%= form_for @child, url: {action: 'create'} do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div>
    <%= f.label :allergies%>
    <%= f.text_field :allergies, class: "form-control" %>
  </div>

 <div>
    <%= f.label :birthday %>
    <%= f.date_field :birthday, class: "datepicker"%>
  </div>

  <p>
    <%= f.submit 'Add Child', class: 'btn btn-default' %>
  </p>
<% end %>



